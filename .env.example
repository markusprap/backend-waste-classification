# Database Configuration
# For PostgreSQL (Production recommended)
DATABASE_URL="postgresql://username:password@host:port/database_name?schema=public"

# For SQLite (Development only)
# DATABASE_URL="file:./dev.db"

PORT=3001
HOST=0.0.0.0
NODE_ENV=production

# JWT Secret (use a strong secret in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Midtrans Configuration (use your real keys)
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_MERCHANT_ID=your-midtrans-merchant-id
MIDTRANS_ENV=sandbox

# Frontend URL (update with your actual Vercel URL)
FRONTEND_URL=https://your-frontend-app.vercel.app

# ML Service URL (update with your actual ML service URL)
ML_SERVICE_URL=https://your-ml-service.onrender.com
ML_SERVICE_TIMEOUT=30000
